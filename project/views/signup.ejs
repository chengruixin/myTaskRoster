<%- include('partials/header.ejs') %>

<main id="main">

    <div class="container d-flex justify-content-center">
        <div class="res-w-35">
            <div class="my-4 pb-3">
                <h3>Create an account</h3>
            </div>
            <div class="form-group ">
                <label for="username">Username</label>
                <input type="text" class="form-control py-4" v-model="username">
            </div>

            <div class="form-group ">
                <label for="email">Email</label>
                <input type="email" class="form-control py-4" v-model="email">
            </div>

            <div class="form-group ">
                <label for="password">Password</label>
                <input type="password" class="form-control py-4" v-model="password">
            </div>

            <div class="form-group ">
                <label for="rePass">Confirm Password</label>
                <input type="password" class="form-control py-4" v-model="rePass">
            </div>

            <div class="form-group">
                <label for="identity">Which Identity?</label>
                <div class="row">
                    <div class="col-12 col-md-6">
                        <button class="w-100 identity-select identity-purple" @click="curIdentity" id="manager-select">Managers</button>
                    </div>
                    <div class="col-12 col-md-6">
                        <button class="w-100 identity-select identity-blue" @click="curIdentity" id="normal-select">Normal Users</button>
                    </div>
                </div>
            </div>
            <div class="my-4">
                <button class="btn btn-primary w-100 py-3 text-3" @click="createAccount">Signup</button>
            </div>

            <div class="form-group">
                Already got an account? <a href="/auth/login">Log in</a>
            </div>

            <div v-show="info.length > 0">{{info}}</div>
        </div>
    </div>


</main>

<script src="/javascripts/signup.js"></script>
<%- include('partials/footer.ejs') %>