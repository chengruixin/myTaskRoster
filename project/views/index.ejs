<%- include('partials/header.ejs') %> 

<main class="container" id="main">
    <div class="row">
    <div class="col-12 col-md-8">
        <div class="jumbotron jumbotron-fluid bg-light rounded-2">
        <div class="container">
            <h1 class="text-8">Welcome!</h1>
            <p class="lead text-3">Hello, welcome to YouTask where you could manage/assign tasks to make your work easily</p>
        </div>
        </div>
    </div>
    <div class="col-12 col-md-4 ">
        
        <div id="login" v-cloak>
            <div class="form-group ">
            <label for="username">Username</label>
            <input type="text" class="form-control py-4"  v-model="username">
            </div>

            <div class="form-group ">
            <label for="password">Password</label>
            <input type="password" class="form-control py-4"  v-model="password">
            </div>

            <div class="my-4">
            <button class="btn btn-success w-100" @click="login">Login</button>
            </div>
            
            <div>
                {{info}}
            </div>
        </div>  
    </div>
    </div>

    <script src="/javascripts/login.js">
        
    </script>
    
</main>


<%- include('partials/footer.ejs') %> 